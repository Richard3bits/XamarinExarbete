<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="XamarinExarbete.PreviewView">
  <ContentView.Content>
      
        <StackLayout Orientation="Vertical">
            
            <Label
                VerticalOptions="Center"
                HorizontalOptions="Center"
                TextColor="Black"
                Text="Färgtema" />

            <StackLayout
                VerticalOptions="FillAndExpand"
                x:Name="view">

                <Label
                    Text="Bakgrundsfärg"
                    x:Name="label" />
                <Button
                    VerticalOptions="Center"
                    Text="Knapp-färg"
                    x:Name="button" />
            </StackLayout>

        </StackLayout>
      
    </ContentView.Content>
    
</ContentView>
